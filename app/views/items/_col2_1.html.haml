.form-group{:style=>"margin-top:24px; width:75px;"}
  %span.label.label-info{:style=>"font-size:14px;"} 
    = "靶材 #{n}"
.form-group{:style=>"margin-left:10px;"}
  %label{:for=>"c2-elem-name"} 名称
  %input.form-control.col-sm-1#c2-elem-name{:placeholder=>"靶材#{n}名称",:name=>"val[name]"}
.form-group{:style=>"margin-left:10px;"}
  %label{:for=>"c2-elem-v"} 电压
  %input.form-control.col-sm-1#c2-elem-v{:placeholder=>"V",:name=>"val[v]"}
.form-group{:style=>"margin-left:10px;"}
  %label{:for=>"c2-elem-a"} 电流
  %input.form-control.col-sm-1#c2-elem-a{:placeholder=>"A",:name=>"val[a]"}
.form-group{:style=>"margin-left:10px;"}
  %label{:for=>"c2-elem-w"} 功率
  %input.form-control.col-sm-1#c2-elem-w{:placeholder=>"W",:name=>"val[w]"}
- if current_page? "/items/#{@item.id}/edit"
  .form-group{:style=>"margin-left:10px; margin-top:24px"}
    %input.btn.btn-primary{:type=>"submit",:value=>"保存"}