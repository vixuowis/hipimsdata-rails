      %th.success 氧气
      %th.success 甲烷

      %th.success 本底真空
      %th.success 基底偏压
      %th.success 工作气压

      / / c3
      / %th.danger 靶基距
      / %th.danger 表面积A

      / %th.danger 饱和电子电流
      / %th.danger 电子密度
      / %th.danger 电子温度

      / / c4
      / %th.warning 元素名称
      / %th.warning 原子
      / %th.warning 离子
      / %th.warning 离化程度

      / %th.warning 元素名称
      / %th.warning 原子
      / %th.warning 离子
      / %th.warning 离化程度

  %tbody
    - @hipims_data.each do |row|
      %tr
        - row[:c1].each_with_index do |item,index|
          %th 
            -if index==0
              = row[:name]
            - else
              = !item.nil? ? "#{item}" : "-"
        - row[:c2].each do |item|
          %th 
            = !item.nil? ? "#{item}" : "-"
        %th
          %a.btn.btn-sm.btn-primary{:href=>"#",:style=>"margin-bottom:5px;"}
            %span.glyphicon.glyphicon-stats
            谱线
          %a.btn.btn-sm.btn-info{:href=>"items/#{row[:id]}",:style=>"margin-bottom:5px;"} 
            %span.glyphicon.glyphicon-search
            详细
        / - row[:c3].each do |item|
        /   %th 
        /     = !item.nil? ? "#{item}" : "-"
        / - row[:c4].each do |item|
        /   %th 
        /     = !item.nil? ? "#{item}" : "-"
        / - row[:c5].each do |item|
        /   %th 
        /     = !item.nil? ? "#{item}" : "-"

