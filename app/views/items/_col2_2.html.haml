.form-group{:style=>"margin-top:24px;"}
  %span.label.label-info{:style=>"font-size:14px;"} 
    = "气体流量"
- this_col = @col2["elem2"] rescue nil
.form-group{:style=>"margin-left:10px;"}
  %label{:for=>"c2-elem-ar"} 氩气
  %input.form-control.col-sm-1#c2-elem-ar{:name=>"val[elem2][ar]",:value=>"#{this_col["ar"] rescue nil}"}
.form-group{:style=>"margin-left:10px;"}
  %label{:for=>"c2-elem-n"} 氮气
  %input.form-control.col-sm-1#c2-elem-n{:name=>"val[elem2][n]",:value=>"#{this_col["n"] rescue nil}"}
.form-group{:style=>"margin-left:10px;"}
  %label{:for=>"c2-elem-o"} 氧气
  %input.form-control.col-sm-1#c2-elem-o{:name=>"val[elem2][o]",:value=>"#{this_col["o"] rescue nil}"}
.form-group{:style=>"margin-left:10px;"}
  %label{:for=>"c2-elem-ch4"} 甲烷
  %input.form-control.col-sm-1#c2-elem-ch4{:name=>"val[elem2][ch4]",:value=>"#{this_col["ch4"] rescue nil}"}
- if current_page? "/items/#{@item.id}/edit"
  .form-group{:style=>"margin-left:10px; margin-top:24px"}
    %input.btn.btn-primary{:type=>"submit",:value=>"保存"}